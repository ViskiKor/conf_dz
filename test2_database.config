{- Конфигурация базы данных -}
MAX_CONN := 100;
POOL_SIZE := [/ MAX_CONN 4];

database := struct{
    host = 'db.example.com',
    port = 5432,
    pools = (list POOL_SIZE [+ POOL_SIZE 5] [* POOL_SIZE 2]),
    charset = 'UTF8',
    connections = struct{
        max = MAX_CONN,
        idle = 10
    }
};
