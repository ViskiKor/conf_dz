{- Тест: Конфигурация чат-бота -}
# Базовые настройки
BOT_NAME := "SmartBot";
PORT := 3000;
SSL_PORT := [+ PORT 443];

# Токены и лимиты
API_TOKEN := "abc123xyz";
RATE_LIMIT := 100;
MAX_MSG := [* RATE_LIMIT 2];

# Структура бота
BOT := struct{
    name = BOT_NAME,
    ports = (list PORT SSL_PORT),
    limits = struct{
        rate = RATE_LIMIT,
        max_msg = MAX_MSG
    },
    features = (list "AI" "NLP" "Voice"),
    debug = true,
    symbol = (chr 9875)  # ❕
};

# Статистика
STATS := struct{
    users = 5423,
    messages = 124567,
    uptime = 99.8
};
